{

    "name":"Color Picker",
    "description":"A color Picker Extension",
    "manifest_version":3,
    "version":"1.0",
    
    "background":{
       "service_worker" : "background.js"

    },
    "options_page":"options.html",
    "action":{
        "default_popup":"popup.html"
    },

    "permissions":[
        "storage",
        "activeTab",
        "scripting"
    ],
    "icons":{
        "16":"/images/picker_16.png",
        "32":"/images/picker_32.png",
        "48":"/images/picker_48.png"
    }
}